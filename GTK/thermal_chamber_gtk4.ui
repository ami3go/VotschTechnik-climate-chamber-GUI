<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <template class="ThermalChamberWindow" parent="GtkApplicationWindow">
    <property name="title">Thermal Chamber Controller</property>
    <property name="default-width">1000</property>
    <property name="default-height">750</property>
    
    <child>
      <object class="GtkBox" id="main_box">
        <property name="orientation">vertical</property>
        <property name="spacing">10</property>
        <property name="margin-top">10</property>
        <property name="margin-bottom">10</property>
        <property name="margin-start">10</property>
        <property name="margin-end">10</property>
        
        <!-- Connection Controls -->
        <child>
          <object class="GtkBox" id="connection_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">10</property>
            
            <child>
              <object class="GtkLabel" id="ip_label">
                <property name="label">Chamber IP:</property>
              </object>
            </child>
            
            <child>
              <object class="GtkDropDown" id="ip_combo">
                <property name="model">
                  <object class="GtkStringList">
                    <items>
                      <item>192.168.1.100</item>
                      <item>192.168.1.101</item>
                    </items>
                  </object>
                </property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="connect_button">
                <property name="label">Connect</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="disconnect_button">
                <property name="label">Disconnect</property>
                <property name="sensitive">False</property>
              </object>
            </child>
            
            <child>
              <object class="GtkLabel" id="status_label">
                <property name="label">Disconnected</property>
                <property name="hexpand">True</property>
                <property name="halign">end</property>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Temperature Display -->
        <child>
          <object class="GtkBox" id="temp_display_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">20</property>
            
            <child>
              <object class="GtkBox" id="current_temp_box">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Current Temperature</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="current_temp_label">
                    <property name="label">25.0 °C</property>
                    <property name="css-classes">temp-display</property>
                  </object>
                </child>
              </object>
            </child>
            
            <child>
              <object class="GtkBox" id="target_temp_box">
                <property name="orientation">vertical</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label">Target Temperature</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel" id="target_temp_label">
                    <property name="label">25.0 °C</property>
                    <property name="css-classes">temp-display</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Preset Buttons -->
        <child>
          <object class="GtkBox" id="preset_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">5</property>
            <property name="homogeneous">True</property>
            
            <child>
              <object class="GtkButton" id="preset_m40">
                <property name="label">-40°C</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="preset_m20">
                <property name="label">-20°C</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="preset_25">
                <property name="label">25°C</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="preset_60">
                <property name="label">60°C</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="preset_85">
                <property name="label">85°C</property>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Custom Temperature Control -->
        <child>
          <object class="GtkBox" id="custom_temp_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">10</property>
            
            <child>
              <object class="GtkEntry" id="temp_entry">
                <property name="text">25.0</property>
                <property name="width-chars">8</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="set_temp_button">
                <property name="label">Set</property>
              </object>
            </child>
            
            <child>
              <object class="GtkScale" id="temp_scale">
                <property name="adjustment">
                  <object class="GtkAdjustment">
                    <property name="lower">-40</property>
                    <property name="upper">150</property>
                    <property name="value">25</property>
                    <property name="step-increment">1</property>
                  </object>
                </property>
                <property name="hexpand">True</property>
                <property name="draw-value">True</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="custom_temp_button">
                <property name="label">Set Custom</property>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Control Buttons -->
        <child>
          <object class="GtkBox" id="control_box">
            <property name="orientation">horizontal</property>
            <property name="spacing">10</property>
            
            <child>
              <object class="GtkButton" id="start_button">
                <property name="label">START CHAMBER</property>
                <property name="css-classes">suggested-action</property>
                <property name="sensitive">False</property>
              </object>
            </child>
            
            <child>
              <object class="GtkButton" id="stop_button">
                <property name="label">STOP CHAMBER</property>
                <property name="css-classes">destructive-action</property>
                <property name="sensitive">False</property>
              </object>
            </child>
          </object>
        </child>
        
        <!-- Plot Area -->
        <child>
          <object class="GtkBox" id="plot_box">
            <property name="orientation">vertical</property>
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            
            <child>
              <object class="GtkLabel">
                <property name="label">Temperature Profile</property>
                <property name="halign">start</property>
              </object>
            </child>
            
            <child>
              <object class="GtkDrawingArea" id="plot_area">
                <property name="hexpand">True</property>
                <property name="vexpand">True</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
  
  <object class="GtkCssProvider" id="css_provider">
    <property name="css">
      .temp-display {
        font-size: 24px;
        font-weight: bold;
      }
      
      .suggested-action {
        background-color: #26a269;
      }
      
      .destructive-action {
        background-color: #c01c28;
      }
    </property>
  </object>
</interface>